{
  "name": "harken",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "frontend": "npx lerna run start --scope=@harken/frontend",
    "backend": "npx lerna run start --scope=@harken/backend",
    "lint": "npx lerna run lint --scope=@harken/frontend",
    "start": "concurrently --kill-others-on-fail \"npm run frontend\"  \"npm run backend\"",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0",
    "yarn": "please-use-npm"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.8.2",
    "@tanstack/react-query": "^5.76.0",
    "autosuggest-highlight": "^3.3.4",
    "concurrently": "^6.5.1",
    "dayjs": "1.11.10",
    "dompurify": "^3.1.7",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "google-maps-react-markers": "2.0.8",
    "leaflet": "1.9.4",
    "leaflet.markercluster": "1.5.3",
    "mysql2": "^3.10.2",
    "persist": "0.2.7",
    "react-redux": "^9.2.0",
    "sequelize": "^6.37.3",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@types/node": "^22.10.6",
    "@types/react-color": "^3.0.12",
    "@types/react-google-recaptcha": "^2.1.9",
    "@types/react-image-crop": "^8.1.6",
    "@types/redux-persist": "^4.3.1",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "eslint": "8.56.0",
    "eslint-plugin-react": "7.33.2",
    "husky": "^9.0.7",
    "lerna": "^8.0.1",
    "lint-staged": "^15.2.1",
    "sequelize-cli": "^6.6.2"
  }
}
